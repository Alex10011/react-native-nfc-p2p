{
  "expo": {
    "name": "NFC P2P",
    "slug": "nfc-p2p",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.nfcp2p",
      "infoPlist": {
        "NFCReaderUsageDescription": "We need to use NFC to read tags and communicate with other devices",
        "com.apple.developer.nfc.readersession.iso7816.select-identifiers": [
          "com.anonymous.nfcp2p"
        ],
        "com.apple.developer.nfc.readersession.felica.systemcodes": [
          "12FC"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.nfcp2p",
      "permissions": [
        "NFC"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "ad320a53-7b0e-407c-bf80-3e81553dfa65"
      }
    }
  }
}
